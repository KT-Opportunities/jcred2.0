@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<searchworks.client.Credit.CompuScan>

@{
    ViewBag.Title = "Consumer Trace";
}



    <div class="col-md-10 col-sm-10">
        <div class="sea">SEARCH RESULTS</div>
        <div class="sea act">Consumer Trace</div>
        <div class="sea_bar">
            <label>Search History</label>
            <input name="search" />
            <button>RESET</button>
        </div>
        <div class="con">
            <div class="col-md-6 col-sm-6 left">
                @using (Html.BeginForm("XDSConsumerTraceResults", "Credit", FormMethod.Post))
                {
                    <div class="ref">
                        <label>Reference</label><br>

                        @Html.TextBox("Reference", null, new { @id = "Ref" })
                    </div>
                     @*<div class="eqType">
                        <label>Verification Method</label><br>

                        @Html.DropDownList("Type", new List<SelectListItem>
                    {
                          new SelectListItem { Text = "Normal", Value = "1"},
                          new SelectListItem { Text = "Photo", Value = "photo"},
                          new SelectListItem { Text = "EnquiryID", Value = "enquiryID"}
                          
                    }, " Select Verification Method", new { @id = "eqtype", required = "required" })
                    </div>*@
                   <div class="seaType" style="top:80px;">
                        <label>Search Criteria</label><br>

                        @Html.DropDownList("Type", new List<SelectListItem>
                    {

                          new SelectListItem { Text = "Address", Value = "address"},
                          new SelectListItem { Text = "Enquiry ID", Value = "enquiryID"},
                          new SelectListItem { Text = "ID", Value = "ID"},
                          new SelectListItem { Text = "Name", Value = "name"},
                          new SelectListItem { Text = "Passport", Value = "passport"},
                          new SelectListItem { Text = "Telephone Number", Value = "tele"},
                          

                    }, "Please Select", new { @id = "seatype", required = "required" })

                    </div> 
                    <div class="address" style="top: 140px;">
                        <label>Suburb</label><br>

                        @Html.TextBox("Suburb", null, new { @id = "FirstName", minlength = "3", maxlength = "18" })
                    </div>
                <div class="address" style="top: 254px;">
                        <label>Street Number</label><br>

                        @Html.TextBox("StreetNumber", null, new { @id = "FirstName", minlength = "1", maxlength = "13" })
                    </div>
                <div class="address" style="top: 197px;">
                        <label>Street Name</label><br>

                        @Html.TextBox("StreetName", null, new { @id = "FirstName", minlength = "3", maxlength = "25" })
                    </div>
                <div class="address" style="top: 308px;">
                        <label>City</label><br>

                        @Html.TextBox("City", null, new { @id = "FirstName", minlength = "3", maxlength = "25" })
                    </div>
                <div class="address" style="top:360px;">
                        <label>Province</label><br>

                        @Html.TextBox("Province", null, new { @id = "FirstName", minlength = "3", maxlength = "25" })
                    </div>
                    <div class="firstname" style="top: 140px;">
                        <label>Surname</label><br>

                        @Html.TextBox("Surname", null, new { @id = "FirstName", minlength = "3", maxlength = "13" })
                    </div>
                <div class="firstname" style="top: 197px;">
                        <label>First Name</label><br>

                        @Html.TextBox("Firstname", null, new { @id = "FirstName", minlength = "3", maxlength = "13" })
                    </div>
                <div class="firstname" style="top: 254px;">
                        <label>Date Of Birth</label><br>

                        @Html.TextBox("DateOfBirth", null, new { @id = "FirstName", minlength = "3", maxlength = "13" })
                    </div>
                    <div class="surname" style="top: 140px;">
                        <label>Passport Number</label><br>

                        @Html.TextBox("PassportNumber", null, new { @id = "Surname", minlength = "3", maxlength = "30" })
                    </div>
                    <div class="idnumber" style="top: 140px;">
                        <label>ID Number</label><br>

                        @Html.TextBox("IDNumber", null, new { @id = "FirstName", minlength = "3", maxlength = "13" })
                    </div>
                    <div class="enquiryID">
                        <label>Enquiry ID</label><br>

                        @Html.TextBox("enquiryID", null, new { @id = "enquiryID", minlength = "3", maxlength = "13" })
                    </div>
                    <div class="enquiryID" style="top:190px;">
                        <label>enquiry Result ID</label><br>

                        @Html.TextBox("enquiryResultID", null, new { @id = "enquiryID", minlength = "3", maxlength = "13" })
                    </div>
                <div class="enquiryID" style="top: 246px;">
                        <label>Search Description</label><br>

                        @Html.TextBox("searchDescription", null, new { @id = "enquiryID", minlength = "3", maxlength = "13" })
                    </div>
                <div class="tel" style="top: 140px;">
                        <label>Surname</label><br>

                        @Html.TextBox("Surname", null, new { @id = "tel", minlength = "3", maxlength = "13" })
                    </div>
                 <div class="tel" style="top: 197px;">
                        <label>Telephone Code</label><br>

                        @Html.TextBox("TelephoneCode", null, new { @id = "tel", minlength = "3", maxlength = "13" })
                    </div>
                <div class="tel" style="top: 254px;">
                        <label>Telephone Number</label><br>

                        @Html.TextBox("TelephoneNumber", null, new { @id = "tel", minlength = "3", maxlength = "13" })
                    </div>
                    <div class="tc" style="top: 431px;">
                        <div>
                            I accept the <a href="#">terms and conditions</a>
                            <input id="tc" type="checkbox" value="tc" required />
                        </div>
                    </div>

                    <button id="combinedComSearch" class="btn" name="combinedComSearch"  style="top:453px;">Perform Search</button>


                }



            </div>
            <div class="col-md-6 col-sm-6 right">
                <div class="cen_text">
                    Obtain the consumer trace details of an individual comprising of address, contact or employment history.
                    For more information about this repost please download the sample report. <br><br>
                    Please note : Tracing should only be utilised to locate debtors! Please not that the result will automatically be deleted on the specified "Expiry Date" as displayed and located in the NCR Searches tab per NCR regulation.
                </div>
            </div>
        </div>
    </div>

<script>
    function Search() {
                        $.ajax(
                        {
                            type: "POST",
                            url: '@Url.Action("GetCompanyResults", "Home")',
                                data: {
                                    companyName: $('#comName').val(),

                                },
                            dataType: "text",
                                error: function (result) {
                                    alertMessage = '<div class="alert alert-success" role="alert">'
                                        + 'Account Created </div>';

                                    $(".resturn-message").html(alertMessage)





                            },
                                success: function (result) {

                             var alertMessage = '<div class="alert alert-success" role="alert">'
                                        + 'Right Usename/Password</div>';

                                    $(".resturn-message").html(alertMessage)

                                    //alert(result.user_type);

                                    debugger;



                          if (result.status == true) {

                                        if (result.user_type === "client") {

                                            console.log(result);

                                            window.location.href = '@Url.Action("SubmissionStep2", "Checks")';

                                        }
                                        else if (result.user_type === "admin") {
                                             window.location.href = '@Url.Action("Admin_S", "Dashboard")';
                                        }


                            }
                            else {

                                var alertMessage = '<div class="alert alert-danger" role="alert">'
                                    + 'Invalid Usename/Password</div>';

                                $(".resturn-message").html(alertMessage)

                                alert(result.message);
                            }
                            }
                        });
                        }

</script>
        <script>

        $(document).ready(function () {
            $(".firstname").hide();
            $(".idnumber").hide();
            $(".surname").hide();
            $(".enquiryID").hide();
           $(".address").hide();
             $(".tel").hide();
            $('#seatype').on('change', function () {
                if (this.value === 'address') {
                    $(".firstname").hide();
                    $(".idnumber").hide();
                    $(".surname").hide();
                    $(".enquiryID").hide();
                    $(".address").show();
            $(".tel").hide();
                }
                else if (this.value === 'ID') {
                    $(".firstname").hide();
                    $(".idnumber").show();
                    $(".surname").hide();
                    $(".enquiryID").hide();
                    $(".address").hide();
            $(".tel").hide();
                }
                else if (this.value === 'enquiryID') {
                    $(".firstname").hide();
                    $(".idnumber").hide();
                    $(".surname").hide();
                    $(".enquiryID").show();
                    $(".address").hide();
            $(".tel").hide();
                }
             else if (this.value === 'name') {
            $(".address").hide();
            $(".idnumber").hide();
            $(".surname").hide();
            $(".enquiryID").hide();
            $(".tel").hide();
            $(".firstname").show();
            }else if (this.value === 'passport') {
            $(".address").hide();
            $(".idnumber").hide();
            $(".enquiryID").hide();
            $(".tel").hide();
            $(".firstname").hide();
            $(".surname").show();
            }else if (this.value === 'tele') {
            $(".address").hide();
            $(".idnumber").hide();
            $(".enquiryID").hide();
            $(".surname").hide();
            $(".firstname").hide();
            $(".tel").show();
            }
            });
        });
    </script>
