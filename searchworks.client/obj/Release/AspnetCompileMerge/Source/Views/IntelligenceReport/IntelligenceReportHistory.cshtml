@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<searchworks.client.Models.check>




<!-- Main content -->
    <div class="col-md-10 col-sm-10 con">
        <div class="seaTable form-style-9">
            <h1>History</h1>
        </div>
        <!--------------------------
    | Your Page Content Here |
    -------------------------->

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th></th>
                    <th>APPLICATION DATE</th>
                    <th>APPLICANT'S <br /> FIRST NAME</th>
                    <th>APPLICANT'S <br /> LAST NAME/ <br> BUSINESS NAME</th>
                    <th>STATUS</th>
                    <th>ID NUMBER/  <br> REG NUMBER</th>
                    <th>COMPLETED DATE</th>
                    @*<th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Report", "ReportAdmin", new { id = item.id })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.search_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.first_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IDNum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.complete_date)
                        </td>

                        @*<td>
                            @Html.ActionLink("Edit", "ClientHistory_Edit", new { id = item.id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                        </td>*@
                    </tr>
                }

            </tbody>
        </table>
    </div>

<script>
    $('#report').click(function () {

            window.location.href = '@Url.Action("ReportAdmin", "Dashboard")';
        });
</script>

<script>

    document.getElementById("Hs").onclick = function () {

        $("#UM").removeClass("active");
        $(this).addClass('active');

        //alert("clicked");
        return false;
    }
</script>