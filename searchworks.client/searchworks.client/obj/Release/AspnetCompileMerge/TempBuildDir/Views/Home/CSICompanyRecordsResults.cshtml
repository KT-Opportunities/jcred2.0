@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<searchworks.client.Company.CompanyInformation>

@{
    ViewBag.Title = "CSI Company Records";
    var type = @ViewData["type"].ToString();
    var mes = @ViewData["Message"].ToString();
}



<div class="col-md-10 col-sm-10">
    <div class="sea act">SEARCH RESULTS</div>
    <div class="con2">
        <div class="left_col">
            <div class="results">
                <i class='far fa-check-circle' style='font-size:30px;color:white; margin-left:10px; padding-top: 15px; display: inline-block '></i>
                <p>2 Results</p>
            </div>
            <p class="num">@ViewData["ComName"]</p>
            <p class="num2">CSI Company Records</p>

            <div class="multi act">
                Multiple Results
            </div>
            <div class="multi non">
                Detailed Information
            </div>

            <div class="seaInfo">
                Search Information
            </div>

            <div class="userInfo">
                <p class="">User:<span>@ViewData["user"]</span></p>
                <p class="">Date:<span>@ViewData["date"]</span></p>
                <p class="">Reference:<span>@ViewData["ref"]</span></p>
                <p class="">Request:<span style="margin-left: 10px; left: -25px; font-size: 8px;"> @ViewData["ResponseMessage"]</span></p>

            </div>

        </div>
        <div class="right_col">
            <div class="seaRes">
                Search Results
            </div>
           
            @if (@ViewData["Message"].ToString() == "good" && type == "name")
            {
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>Company ID</th>
                            <th>Registration number</th>
                            <th>Company Name</th>
                            <th>Translated Name</th>
                            <th>Registration Date</th>
                            <th>Status Code</th>
                            <th class="last">Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyID)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.CompanyRegistrationNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyTranslatedName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyStatusCode)
                                </td>
                                <td class="last">
                                    @Html.DisplayFor(modelItem => item.CompanyStatus)
                                </td>
                                <td>

                                    @Html.ActionLink("Search more", "CSICompanyDetails", "Home", new { comID = item.CompanyID }, new { @id = "view", @class = "seaMore" })
                                </td>
                            </tr>
                        }




                    </tbody>
                </table>
            }

            else if (@ViewData["Message"].ToString() == "good" && type == "comID" || type == "regNum")
            {
                <table class="table table-striped">
                    <thead>
                        <tr>

                            <th>Company ID</th>
                            <th>Registration number</th>
                            <th>Company Name</th>
                            <th>Translated Name</th>
                            <th>Registration Date</th>
                            <th>Status Code</th>
                            <th class="last">Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>

                                @ViewData["ComID"]
                            </td>
                            <td>
                                @ViewData["ComReg"]

                            </td>
                            <td>
                                @ViewData["ComName"]

                            </td>
                            <td>
                                @ViewData["ComTransName"]

                            </td>
                            <td>
                                @ViewData["ComRegDate"]

                            </td>
                            <td>
                                @ViewData["ComStatCode"]

                            </td>
                            <td class="last">
                                @ViewData["ComStat"]

                            </td>
                            <td>

                                @Html.ActionLink("Search more", "CSICompanyDetails", "Home", new { comID = @ViewData["ComID"] }, new { @id = "view", @class = "seaMore" })
                            </td>
                        </tr>




                    </tbody>
                </table>
            }

            else if (@ViewData["Message"].ToString() == "Service is offline" && type == "name" || type == "comID" || type == "regNum")
            {
                <div class="no_results">
                    <img src="~/Content/img/Place Holder for search history.png" alt="can't display image">
                    <div class="no_res">
                        @ViewData["Message"]
                    </div>
                </div>

            }



        </div>


    </div>
</div>

